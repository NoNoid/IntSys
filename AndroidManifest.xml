<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.intsys"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name="com.example.intsys.IntSysApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light.DarkActionBar" >
        <activity
            android:name="com.example.intsys.SessionListActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.intsys.MainActivity"
            android:label="@string/app_name" >

            <!--
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            -->
        </activity>
        <activity
            android:name="com.example.intsys.SessionActivity"
            android:label="@string/title_activity_session"
            android:parentActivityName="com.example.intsys.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="MainActivity" />
        </activity>
        <activity
            android:name="com.example.intsys.CreateSessionActivity"
            android:label="@string/title_activity_create_session"
            android:parentActivityName="com.example.intsys.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="MainActivity" />
        </activity>
        <activity
            android:name="com.example.intsys.CameraActivity"
            android:label="@string/title_activity_camera"
            android:parentActivityName="com.example.intsys.SessionActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="SessionActivity" />
        </activity>
        <activity
            android:name="com.example.intsys.ResultActivity"
            android:label="@string/title_activity_result"
            android:parentActivityName="com.example.intsys.SessionActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="SessionActivity" />
        </activity>
        <activity
            android:name="com.example.intsys.DetailActivity"
            android:label="@string/title_activity_detail" >
        </activity>
        <activity
            android:name="com.example.intsys.SeriesActivity"
            android:label="@string/title_activity_series"
            android:parentActivityName="com.example.intsys.SessionActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="SessionActivity" />
        </activity>
    </application>

</manifest>
